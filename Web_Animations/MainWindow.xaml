<Window x:Class="Web_Animations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Web_Animations"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Canvas Name="c" Background="Black" MouseMove="MouseMove" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <WrapPanel Canvas.Right="0" Canvas.Bottom="0">
            <Slider Width="130" Name="Sldr_Speed" Value="0"/>
        </WrapPanel>
    </Canvas>
</Window>
